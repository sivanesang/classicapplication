@{
    ViewBag.Title = "Mobile Brands";
    ViewBag.SubTitle = "Add/Edit/View Mobile Brand Details";
}

@section Menu {
    @Scripts.Render("~/Scripts/Admin/MobileBrands-menu")
}

@Styles.Render("~/AdminLTE/plugins/datatables/css")

<div class="row">
    <div class="content">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Mobile Brands</h3>
            </div>

            @using (Html.BeginForm("MobileBrands", "Admin", FormMethod.Post, new { id = "MobileBrands", @class="form-horizontal", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="box-body">
                    <div class="form-group">
                        <label for="txtBrandName" class="col-sm-2 control-label">Mobile Brand</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" id="txtBrandName" placeholder="Brand Name">
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="button" class="btn btn-default">Cancel</button>
                    <button type="submit" class="btn btn-info">Save</button>
                </div>
           
            }
        </div>

  
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Mobile Brand List</h3>
            </div>
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width:40px">S.No</th>
                            <th>Brand Name</th>
                            <th style="width:50px">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>Nokia</td>
                            <td>
                                <i class="fa fa-edit"></i>
                                <i class="fa fa-trash"></i>
                            </td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>Samsung</td>
                            <td>
                                <i class="fa fa-edit"></i>
                                <i class="fa fa-trash"></i>
                            </td>
                        </tr>
                        <tr>
                            <td>3</td>
                            <td>Karbon</td>
                            <td>
                                <i class="fa fa-edit"></i>
                                <i class="fa fa-trash"></i>
                            </td>
                        </tr>
                        <tr>
                            <td>4</td>
                            <td>Vivo</td>
                            <td>
                                <i class="fa fa-edit"></i>
                                <i class="fa fa-trash"></i>
                            </td>
                        </tr>
                        <tr>
                            <td>5</td>
                            <td>Oppo</td>
                            <td>
                                <i class="fa fa-edit"></i>
                                <i class="fa fa-trash"></i>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>




@section Scripts {
    @Scripts.Render("~/AdminLTE/plugins/datatables/js")
    @Scripts.Render("~/Scripts/Tables/Data")
}

