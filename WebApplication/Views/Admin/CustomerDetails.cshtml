@{
    ViewBag.Title = "Customer Details";
    ViewBag.SubTitle = "Add/Edit/View Customer Details";
}

@section Menu {
    @Scripts.Render("~/Scripts/Admin/CustomerDetails-menu")
}

@Styles.Render("~/AdminLTE/plugins/datatables/css")

@using WebApplication.Models
@model CustomerDetailsInfo

<div class="row">
    <div class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Customer Details</h3>
            </div>
            <div class="box-body">
                <input type="hidden" id="BrandId" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="CustomerName">Customer Name</label>
                            <input type="text" class="form-control" id="CustomerName" placeholder="Customer Name">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Address">Address</label>
                            <input type="text" class="form-control" id="Address" placeholder="Address, Street">
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="City">City</label>
                            <input type="text" class="form-control" id="City" placeholder="City">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Phone">Mobile</label>
                            <input type="text" class="form-control" id="Phone" placeholder="Mop">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Mail">E-Mail</label>
                            <input type="text" class="form-control" id="Mail" placeholder="Mrp">
                        </div>
                    </div>

                </div>
            </div>
            <div class="box-footer">
                <button type="button" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-info">Save</button>
            </div>
        </div>

  
        <div class="box box-info">
            <div class="box-header">
                <h3 class="box-title">Customer Details List</h3>
            </div>
            <div class="box-body">
